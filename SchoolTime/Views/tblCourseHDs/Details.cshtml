    }

    function ConvertTimetoMin(time) {
        var _min = 0;
        if (time != "" && time != undefined) {
            var _t = time.split(':');
            _min = ((parseInt(_t[0])) * 60) + parseInt(_t[1]);
        }
        return _min;
    }
</script>
