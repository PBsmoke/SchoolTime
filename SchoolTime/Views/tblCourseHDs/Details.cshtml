            type: 'GET',
            dataType: 'json',
            contentType: 'application/json; charset=utf-8',
            url: '/tblCourseHDs/getDetail',
            data: { CourseHDID: $("#hidHDID").val() },
            success: function (result) {
                var sumlate = []; 
                for (var j = 1; j <= $("#hidNumIN").val(); j++) {
                    sumlate[j] = 0
                }
                var sumpass = 0
