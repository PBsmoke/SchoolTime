    var TempRelateEmpID = "";
}

@if (!string.IsNullOrEmpty(Session["relateTable"] as string))
{
    TempRelateTable = Session["relateTable"].ToString();
}

@if (!string.IsNullOrEmpty(Session["relateID"] as string))
{
    TempRelateEmpID = Session["relateID"].ToString();
}


